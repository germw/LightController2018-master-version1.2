<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/toolbar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="0dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">
                <!-- Buttons for bulbs -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_marginRight="2pt"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageButton
                                android:id="@+id/bulb1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_weight="1"
                                android:background="@drawable/button_bulb"
                                android:scaleType="fitCenter"
                                android:src="@drawable/ic_bulb_off" />

                            <TextView
                                android:id="@+id/bulb1_name"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:layout_weight="0"
                                android:gravity="center"
                                android:text="Group 1"
                                android:textColor="@color/text" />
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/bulb1_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0"
                            android:baselineAlignBottom="true"
                            android:src="@drawable/tick" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_marginRight="2pt"
                        android:layout_weight="1"
                        android:orientation="horizontal">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageButton
                                android:id="@+id/bulb2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_weight="1"
                                android:background="@drawable/button_bulb"
                                android:scaleType="fitCenter"
                                android:src="@drawable/ic_bulb_off" />

                            <TextView
                                android:id="@+id/bulb2_name"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:layout_weight="0"
                                android:gravity="center"
                                android:text="Group 2"
                                android:textColor="@color/text" />
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/bulb2_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:baselineAlignBottom="true"
                            android:src="@drawable/tick" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageButton
                                android:id="@+id/bulb3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_weight="1"
                                android:background="@drawable/button_bulb"
                                android:scaleType="fitCenter"
                                android:src="@drawable/ic_bulb_off" />

                            <TextView
                                android:id="@+id/bulb3_name"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:layout_weight="0"
                                android:gravity="center"
                                android:text="Group 3"
                                android:textColor="@color/text" />
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/bulb3_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0"
                            android:baselineAlignBottom="true"
                            android:src="@drawable/cross" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Measured Flux"
                        android:textColor="@color/text" />

                    <TextView
                        android:id="@+id/current_flux"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/display_border"
                        android:gravity="center"
                        android:text="300"
                        android:textColor="@color/text" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Measured CCT"
                        android:textColor="@color/text" />

                    <TextView
                        android:id="@+id/current_cct"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/display_border"
                        android:gravity="center"
                        android:text="5000"
                        android:textColor="@color/text" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/debug_t"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="05"
                        android:text="Debugger Mode"
                        android:textAlignment="viewEnd"
                        android:textColor="@color/text" />

                    <Switch
                        android:id="@+id/mode_debug"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingRight="15dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TableLayout
                        android:id="@+id/table"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:orientation="horizontal"
                        android:stretchColumns="0,1,2,3"
                        android:visibility="gone">

                        <TableRow android:background="@drawable/border1">

                            <TextView
                                android:id="@+id/bulb_t"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="6pt"
                                android:text="Bulb"
                                android:textColor="#29DB15"
                                android:textSize="6pt" />

                            <TextView
                                android:id="@+id/table_bulb1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/bulb1"
                                android:textColor="#29DB15"
                                android:textSize="6pt" />

                            <TextView
                                android:id="@+id/table_bulb2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/bulb2"
                                android:textColor="#29DB15"
                                android:textSize="6pt" />

                            <TextView
                                android:id="@+id/table_bulb3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/bulb3"
                                android:textColor="#29DB15"
                                android:textSize="6pt" />
                        </TableRow>

                        <TableRow android:background="@drawable/border_t">

                            <TextView
                                android:id="@+id/status_t"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="6pt"
                                android:text="Status"
                                android:textColor="#29DB15"
                                android:textSize="6pt" />

                            <TextView
                                android:id="@+id/bulb1_on"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/bulb1_on"
                                android:textColor="#29DB15"
                                android:textSize="6pt" />

                            <TextView
                                android:id="@+id/bulb2_on"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/bulb1_on"
                                android:textColor="#29DB15"
                                android:textSize="6pt" />

                            <TextView
                                android:id="@+id/bulb3_on"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/bulb1_on"
                                android:textColor="#29DB15"
                                android:textSize="6pt" />
                        </TableRow>

                        <TableRow android:background="@drawable/border_t">

                            <TextView
                                android:id="@+id/intensity_t"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="6pt"
                                android:text="Intensity"
                                android:textColor="#29DB15"
                                android:textSize="6pt" />

                            <TextView
                                android:id="@+id/Int1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/Int1"
                                android:textColor="#29DB15"
                                android:textSize="6pt" />

                            <TextView
                                android:id="@+id/Int2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/Int2"
                                android:textColor="#29DB15"
                                android:textSize="6pt" />

                            <TextView
                                android:id="@+id/Int3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/Int3"
                                android:textColor="#29DB15"
                                android:textSize="6pt" />
                        </TableRow>

                        <TableRow android:background="@drawable/border_t">

                            <TextView
                                android:id="@+id/color_t"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="6pt"
                                android:text="Color"
                                android:textColor="#29DB15"
                                android:textSize="6pt" />

                            <TextView
                                android:id="@+id/Color1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/Color1"
                                android:textColor="#29DB15"
                                android:textSize="6pt" />

                            <TextView
                                android:id="@+id/Color2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/Color2"
                                android:textColor="#29DB15"
                                android:textSize="6pt" />

                            <TextView
                                android:id="@+id/Color3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/Color3"
                                android:textColor="#29DB15"
                                android:textSize="6pt" />
                        </TableRow>

                        <TableRow android:background="@drawable/border_t">

                            <TextView
                                android:id="@+id/rgb_t"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="6pt"
                                android:text="RGB"
                                android:textColor="#29DB15"
                                android:textSize="6pt" />

                            <TextView
                                android:id="@+id/rgb_r"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="R"
                                android:textColor="#29DB15"
                                android:textSize="6pt" />

                            <TextView
                                android:id="@+id/rgb_g"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="G"
                                android:textColor="#29DB15"
                                android:textSize="6pt" />

                            <TextView
                                android:id="@+id/rgb_b"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="B"
                                android:textColor="#29DB15"
                                android:textSize="6pt" />
                        </TableRow>

                    </TableLayout>

                    <LinearLayout
                        android:id="@+id/gap1"
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/gap2"
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.1"
                        android:orientation="horizontal" />

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.8"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/mode1"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:adjustViewBounds="true"
                            android:background="@null"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ic_mode"
                            android:tint="@color/mode" />

                        <TextView
                            android:id="@+id/mode_text1"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="Mode 1"
                            android:textColor="@color/text" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/mode2"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:adjustViewBounds="true"
                            android:background="@null"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ic_mode"
                            android:tint="@color/mode" />

                        <TextView
                            android:id="@+id/mode_text2"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="Mode 2"
                            android:textColor="@color/text" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/mode3"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:adjustViewBounds="true"
                            android:background="@null"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ic_mode"
                            android:tint="@color/mode" />

                        <TextView
                            android:id="@+id/mode_text3"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="Mode 3"
                            android:textColor="@color/text" />

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.4"
                    android:orientation="horizontal"
                    android:paddingLeft="80dp"
                    android:paddingRight="80dp">

                    <ImageButton
                        android:id="@+id/dec_intensity"
                        android:layout_width="0dp"
                        android:layout_height="25dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_gravity="bottom"
                        android:layout_weight="1"
                        android:background="@null"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_minus"
                        android:tint="@color/add_min"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <TextView
                        android:id="@+id/intensity_t1"
                        android:layout_width="58dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="bottom|center"
                        android:includeFontPadding="false"
                        android:text="Flux"
                        android:textColor="@color/text"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/Display_Intensity"
                        android:layout_width="41dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:gravity="bottom|center_vertical|center_horizontal"
                        android:text="@string/Display_Intensity"
                        android:textColor="@color/text"
                        android:textSize="14sp" />


                    <ImageButton
                        android:id="@+id/inc_intensity"
                        android:layout_width="0dp"
                        android:layout_height="25dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_gravity="bottom"
                        android:layout_weight="1"
                        android:background="@null"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_plus"
                        android:tint="@color/add_min"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.8"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.49" />

                </LinearLayout>

                <SeekBar
                    android:id="@+id/seekbar_intensity"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.5"
                    android:background="@null"
                    android:max="22"
                    android:maxHeight="4dp"
                    android:paddingLeft="5pt"
                    android:paddingRight="5pt"
                    android:progressDrawable="@drawable/seekbar_progress" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.4"
                    android:orientation="horizontal"
                    android:paddingLeft="40dp"
                    android:paddingRight="40dp">

                    <ImageButton
                        android:id="@+id/dec_color"
                        android:layout_width="0dp"
                        android:layout_height="25dp"
                        android:layout_gravity="bottom"
                        android:layout_weight="1"
                        android:background="@null"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_minus"
                        android:tint="@color/add_min" />

                    <TextView
                        android:id="@+id/color_t1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="bottom|center_vertical|center_horizontal"
                        android:text="Color Temperature"
                        android:textColor="@color/text"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/Display_ColorTemperature"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:gravity="bottom|center_vertical|center_horizontal"
                        android:text="@string/Display_ColorTemperature"
                        android:textColor="@color/text"
                        android:textSize="14sp" />

                    <ImageButton
                        android:id="@+id/inc_color"
                        android:layout_width="0dp"
                        android:layout_height="25dp"
                        android:layout_gravity="bottom"
                        android:layout_weight="1"
                        android:background="@null"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_plus"
                        android:tint="@color/add_min" />

                </LinearLayout>

                <SeekBar
                    android:id="@+id/seekbar_color"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.5"
                    android:background="@null"
                    android:max="22"
                    android:maxHeight="4dp"
                    android:paddingLeft="5pt"
                    android:paddingRight="5pt"
                    android:progressDrawable="@drawable/seekbar_progress" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.1"
                    android:orientation="horizontal"></LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/effect"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:adjustViewBounds="true"
                            android:background="@null"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ic_effect"
                            android:tint="@color/magic" />

                        <TextView
                            android:id="@+id/effect_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Effect"
                            android:textColor="@color/text" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/button_send"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:adjustViewBounds="true"
                            android:background="@null"
                            android:padding="1dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ic_send" />

                        <TextView
                            android:id="@+id/button_send_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Send"
                            android:textColor="@color/text" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/alarm"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:adjustViewBounds="true"
                            android:background="@null"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ic_alarm"
                            android:tint="@color/alarm" />

                        <TextView
                            android:id="@+id/alarm_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Alarm"
                            android:textColor="@color/text" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/turn_off"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:adjustViewBounds="true"
                            android:background="@null"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ic_turn_off"
                            android:tint="@color/red" />

                        <TextView
                            android:id="@+id/turnoff_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Turn Off"
                            android:textColor="@color/text" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/gap3"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.2"
                    android:orientation="horizontal" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    <!--fitsSystemWindow wont't overlay the status bar-->
    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/drawer_header"
        app:menu="@menu/drawer"
        android:background="@color/nav_bg"/>
</android.support.v4.widget.DrawerLayout>




